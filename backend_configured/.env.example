# Environment variables for DreamWeaver Story Generation System

# API Keys
GOOGLE_API_KEY=your_google_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Model Configuration (Default: Google Gemini)
DEFAULT_MODEL_PROVIDER=google
DEFAULT_MODEL=gemini-1.5-pro

# Story Generation Settings
DEFAULT_AGE_GROUP=6-12
DEFAULT_STORY_LENGTH=medium
MAX_REVISION_ROUNDS=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Development/Production
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Settings (configure for production)
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Optional: Database (for production story storage)
# DATABASE_URL=postgresql://user:password@localhost/dreamweaver

# Optional: Redis (for caching and background tasks)
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring
# LANGSMITH_API_KEY=your_langsmith_api_key
# LANGSMITH_PROJECT=dreamweaver-stories

# Google Cloud (if using Vertex AI)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
